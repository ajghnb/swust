<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iswust.dao.ApplicantUserDao">
    <resultMap id="applicantMap" type="com.iswust.model.ApplicantUser">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="stu_num" property="stuNum" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="major" property="major" jdbcType="VARCHAR"/>
        <result column="qq" property="qq" jdbcType="VARCHAR"/>
        <result column="reason" property="reason" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="addApplicantUser" parameterType="com.iswust.model.ApplicantUser">
        INSERT INTO
            community_applicant
        VALUES
            (#{user.id}, #{user.name}, #{user.stuNum}, #{user.major}, #{user.qq}, #{user.reason})
    </insert>

    <update id="updateApplicantUser" parameterType="com.iswust.model.ApplicantUser">
        UPDATE
            community_applicant
        SET
            `name` = #{user.name}, major = #{user.major}, qq = #{user.qq}, reason = #{user.reason}
        WHERE
            id = #{user.id} AND stu_num = #{user.stuNum}
    </update>

    <delete id="deleteApplicantUser" parameterType="com.iswust.model.ApplicantUser">
        DELETE FROM
            community_applicant
        WHERE
            id = #{user.id} AND stu_num = #{user.stuNum}
    </delete>

    <select id="selectApplicantUserById" resultMap="applicantMap">
        SELECT
            *
        FROM
            community_applicant
        WHERE
            id = #{id}
    </select>

</mapper>